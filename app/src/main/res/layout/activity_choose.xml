<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"

    tools:context=".presentation.ChooseActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:padding="4dp"
        android:id="@+id/text_view_go_back"
        style="@style/TextView"
        android:text="@string/text_view_go_back"
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="12dp"
        android:drawableLeft="@drawable/ic_action_go_back_arrow"
        android:drawableStart="@drawable/ic_action_go_back_arrow"
        android:drawablePadding="4dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="24dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/text_view_go_back"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/text_view_filter_name"
        style="@style/TextView"
        android:textSize="21sp"
        android:text="@string/text_view_filter_name"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="48dp"

        app:layout_constraintTop_toBottomOf="@id/text_view_go_back"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:id="@+id/recycler_view_choose"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/text_view_filter_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>